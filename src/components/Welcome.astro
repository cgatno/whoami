---
import { Content, frontmatter } from "@whoami/content/home.md";
---

<main class="welcome-container">
  <article>
    <h1>{frontmatter.title}</h1>
    <p>
      <Content />
    </p>
  </article>
</main>

<style>
  .welcome-container {
    position: relative;
    display: flex;
    align-items: center;
    height: 100%;
    width: 100%;
    z-index: 1;
    padding: clamp(2rem, 5vw, 4rem);
  }

  article {
    max-width: 960px;
  }

  h1 {
    opacity: 0.9;
  }

  /* Better legibility over the gradient background */
  p {
    font-weight: 500;
  }
</style>

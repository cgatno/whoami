---
// Fonts
import "@fontsource-variable/fraunces";
import "@fontsource-variable/plus-jakarta-sans";
import "@fontsource-variable/fira-code";

// Global styles
import "@whoami/styles/reset.css";
import "@whoami/styles/global.css";

// Used to set canonical link in the head
import { removeTrailingForwardSlash } from "@whoami/lib/path";
const canonicalURL = removeTrailingForwardSlash(
  new URL(Astro.url.pathname, Astro.site),
);

import { frontmatter } from "@whoami/content/home.md";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />

    <title>{frontmatter.meta_title}</title>

    <meta name="description" content={frontmatter.meta_description} />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  import { applyTheme, watchTheme } from "@whoami/lib/theme";

  // Apply the theme on initial load and watch for changes
  applyTheme();
  watchTheme();
</script>
